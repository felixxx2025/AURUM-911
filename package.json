{
  "name": "aurum-911",
  "type": "module",
  "version": "1.0.0",
  "description": "Enterprise SaaS Platform for HR, Finance & Identity Management",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd services/hrplus-api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd services/hrplus-api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "test": "npm run test:api && npm run test:web",
    "test:api": "cd services/hrplus-api && npm test",
    "test:web": "cd apps/web && npm test",
    "deploy": "./scripts/deploy.sh",
    "backup": "./scripts/backup.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "terraform:plan": "cd terraform && terraform plan",
    "terraform:apply": "cd terraform && terraform apply",
    "test:unit": "jest",
    "test:e2e": "cypress run",
    "test:all": "npm run test:unit && npm run test:e2e",
    "docs:api": "cd services/hrplus-api && npm run docs",
    "mobile:start": "cd apps/mobile && npm start",
    "mobile:build": "cd apps/mobile && npm run build",
    "lint": "eslint ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "@eslint/js": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "typescript-eslint": "^8.5.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "cypress": "^13.6.0",
    "@cypress/react": "^8.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}

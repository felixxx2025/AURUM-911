{
  "info": {
    "name": "AURUM-911",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "a2a9b1f1-0000-4000-8000-aurum911"
  },
  "item": [
    {
      "name": "JWKS",
      "request": { "method": "GET", "url": "{{baseUrl}}/.well-known/jwks.json" }
    },
    {
      "name": "OAuth2 Token",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/x-www-form-urlencoded" }],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "grant_type", "value": "client_credentials" },
            { "key": "client_id", "value": "{{clientId}}" },
            { "key": "client_secret", "value": "{{clientSecret}}" }
          ]
        },
        "url": "{{baseUrl}}/oauth2/token"
      }
    },
    {
      "name": "Status",
      "request": { "method": "GET", "url": "{{baseUrl}}/status" }
    },
    {
      "name": "Sandbox: disparar evento",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": "{{baseUrl}}/sandbox/events/hr.person.created"
      }
    },
    {
      "name": "Parceiros: logs paginados",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/v1/partners/{{partnerId}}/logs?status=all&limit=50&offset=0&sort=desc",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "partners", "{{partnerId}}", "logs"],
          "query": [
            { "key": "status", "value": "all" },
            { "key": "q", "value": "" },
            { "key": "from", "value": "" },
            { "key": "to", "value": "" },
            { "key": "limit", "value": "50" },
            { "key": "offset", "value": "0" },
            { "key": "sort", "value": "desc" }
          ]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "clientId", "value": "cli_xxx" },
    { "key": "clientSecret", "value": "sec_xxx" },
    { "key": "accessToken", "value": "" },
    { "key": "partnerId", "value": "par_xxx" }
  ]
}
